#include <iostream>
#include <string>
#include <limits>
#include<cctype>
using namespace std;

int main()
{
	string name;
	string address;

	cout << "Please enter your name: \n";
	getline(cin, name);

	cout << "Now enter your address: \n";
	getline(cin, address);
	
	cout << "Thanks. Your name and address is: \n" << name << endl << address << endl;

	system("pause");
	return 0;
}
