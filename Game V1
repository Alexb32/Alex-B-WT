int main()
{
	
	cout << "You are in the middle of nowhere, should you walk left or right? \n";
	cin >> answer1;
	if (answer1 == "Left" ||answer1 == "left")
	{
		turnBack();
	}
	//Level 2-1
	if (answer1 == "Right" || answer1 == "right")
	{
		cout << "\nYou have been walking for about three hours now and you have still not come across anything. \n Would you like to turn around or continue?\n";
		
		//Level 2-2
		cin >> answer3;
		if (answer3 == "Turn around" || answer3 == "turn around")
		{
			turnBack();
		}
		//Level 2-2
		else if (answer3 == "Continue" || answer3 == "continue")
		{
			cout << "\nAfter another five hours of walking you come across a homeless dude and he asks you if you \nwant some shrooms? Do you accept or decline?\n";
			cin >> answer6;
			if (answer6 == "Accept" || answer6 == "accept")
			{
				cout << "\nHoly buckets, that is some crazy shit. While you are tripping ballz you see a small \nfigure that looks a lot like a person. You are pretty sure that\n it is real and not a hallucination, do you go towards\n the person and risk getting more lost, or keep going the way you were?(Please answer Person or continue)\n"
			}
		}
	}
	system("pause");
	return 0;
	
}
int turnBack()
{
	
		cout << "\nCongratulations you have come across a town that seems to have a working telephone,\nbut you only have enough money for one call. Who do you call, the police, or your mom?\n";
		cin >> answer2;

		if (answer2 == "Mom" || answer2 == "mom")
		{
			//Level 1-2
			cout << "\nUnfortunatly your mother has not picked up the, so you leave her a message saying\n that you don't know where you are, and how she should go and look for you. You decide\n to look around the town to find out where you are. You come across a bank, \nand an abandoned house, which one do you enter?\n ";
			cin >> answer4;
		}

		else if (answer2 == "Police" || answer2 == "police")
		{
			//Level 1-2
			cout << "\nYou called the police and they said to sit tight while they come to pick you up.\nWhen they arrive you tell them what happend and they give you the choice of leaving \nand find things out on your own or to stay and have to sit in a cell while they find \nout who you are. Do you choose the cell or to leave?\n";
			cin >> answer5;
			if (answer5 == "Cell" || answer5 == "cell")
			{
				//Level 1-3
				cout << "\nYou end up sitting in the cell forever and the cops do not feed you, so you end up dying\nWould you like to restart? \n(Yes or No)\n";
				cin >> answer7;
				if (answer7 == "Yes" || answer7 == "yes")
				{
					//Level 1-4
					main();
				}
				else if (answer7 == "No" || answer7 == "no");
				{
					exit(0);
				}
			}
		}
		system("pause");
		return 0;

}
